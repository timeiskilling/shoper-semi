    </div>
  </header>

  <nav class="nav-container">
    <div class="nav-buttons">
      <div class="dropdown">
        <button class="nav-button dropdown-button">All</button>
        <ul class="dropdown-menu">
        </ul>
      </div>
      <div class="sort-container">
        <label for="sort">Sort by:</label>
        <select id="sort" onchange="applySorting()">
          <option value="">Default</option>
          <option value="price_asc">Price: low –¥–æ high</option>
          <option value="price_desc">Price: high to low</option>
          <option value="name_asc">Name: A-Z</option>
          <option value="name_desc">Name: Z-A</option>
        </select>
      </div>
    </div>
    <div class="centered-search-container">
      <form method="get" action="/search" onsubmit="return validateSearch()">
        <input type="text" id="searchInput" name="query" placeholder="Search...">
        <button type="submit"><i class="fa fa-search"></i></button>
      </form>
    </div>
  </nav>

  <div id="content">
    <main>
      <ul class="product-list">
        {{#each items}}
        <li class="product-item">
          <a href="/product/{{id}}" class="product-link">
            <img src="/picture/{{file_path}}" alt="{{name}}" class="product-image">
          </a>
          <div class="product-details">
            <a href="/product/{{id}}" class="product-link">
              <strong class="product-name">{{name}}</strong>
            </a>
            <span class="product-price">{{price}} –≥—Ä–Ω</span>
            <p class="product-description">{{description}}</p>
          </div>
        </li>
        {{/each}}
      </ul>

      <!-- Add Product Modal -->
      <div id="addProductModal" class="modal">
        <div class="modal-content">
          <span class="close-button" id="closeModalButton">&times;</span>
          <h2>Add new product</h2>
          <form action="/add_product" method="post" enctype="multipart/form-data">
            <div class="form-group">
              <label for="name">Name:</label>
              <input type="text" id="name" name="name" autocomplete="name" required>
            </div>

            <div class="form-group">
              <label for="price">Price:</label>
              <input type="number" id="price" name="price" required>
            </div>

            <div class="form-group">
              <label for="description">Description:</label>
              <textarea id="description" name="description"></textarea>
            </div>

            <div class="form-group">
              <label for="main_image">Main image:</label>
              <div class="custom-file-input">
                <input type="file" id="main_image" name="main_image" accept="image/*" required>
                <label for="main_image" class="file-button">Select file</label>
                <span class="file-name">No file selected</span>
              </div>
              <div class="image-preview" id="mainImagePreview"></div>
            </div>

            <div class="form-group">
              <label for="images">Additional image:</label>
              <div class="custom-file-input">
                <input type="file" id="images" name="images" accept="image/*" multiple>
                <label for="images" class="file-button">Select files</label>
                <span class="file-name">No files selected</span>
              </div>
              <div class="image-preview" id="additionalImagesPreview"></div>
            </div>

            <div class="form-group">
              <label for="category_id">Category:</label>
              <select id="category_id" name="category_id">
                {{#each categoriess}}
                <option value="{{id}}">{{name}}</option>
                {{/each}}
              </select>
            </div>

            <button type="submit">Add product</button>
          </form>
        </div>
      </div>
    </main>
  </div>
  <script src="/static/js/home_page.js"></script>
</body>
</html>